@{
    ViewData["Title"] = "注冊";
    @model WebApplication5.Models.account

}

<p>@ViewBag.Err</p>
<form method="post" action="~/Home/Rgistered">
    <div class="form-group row">
        <label for="inputUserName" class="col-sm-2">帳號名稱</label>
        <div class="col-sm-10">
            <input type="text" required="required" id="inputUserName" name="UName" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPasswd" class="col-sm-2">賬號</label>
        <div class="col-sm-10">
            <input type="text" placeholder=" 請輸入賬號" required="required" id="inputName" name="UserId" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputName" class="col-sm-2">密碼</label>
        <div class="col-sm-10">
            <input type="password" placeholder=" 請輸入密碼" required="required" id="inputPasswd" name="Passwd" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputGender" class="col-sm-2">性別</label>
        <div class="col-sm-10">
            男：<input type="radio" id="inputGender" name="UGender" value="男"/>&nbsp;&nbsp;
            女：<input type="radio" id="inputGender" name="UGender" value="女" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail" class="col-sm-2">電子郵箱</label>
        <div class="col-sm-10">
            <input type="email" placeholder=" 請輸入電子郵箱" required="required" id="inputEmail" name="UEmail" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputAddress" class="col-sm-2">社區地址</label>
        <div class="col-sm-10">
            <input type="text" placeholder=" 請輸入社區地址" required="required" id="inputAddress" name="UAddress" class="form-control" />
        </div>
    </div>

    <input class="btn btn-info" type="submit" value="新增" />
</form>