@{
    ViewData["Title"] = "注冊";
    @model WebApplication5.Models.account;

}
<h1>@ViewData["Title"]</h1>
<br/>
<h2 style="color:red">@ViewBag.Err</h2><!--顯示賬號是否重複-->
<br/>
<form method="post" action="~/Home/Rgistered">
    <div class="form-group row">
        <label for="inputUserName" class="col-sm-2">帳號名稱</label>
        <div class="col-sm-10">
            <input type="text" required="required" id="inputUserName" name="UName" class="form-control" />
        </div>
        <br />     
    </div>
    <div class="form-group row">
        <label for="inputPasswd" class="col-sm-2">賬號</label>
        <div class="col-sm-10">
            <input type="text" placeholder=" 請輸入賬號（開頭為字母,且加數字至少6位）" required="required" id="inputName" name="UserId" class="form-control" />
        </div>
        <br />
    </div>
    <div class="form-group row">
        <label for="inputName" class="col-sm-2">密碼</label>
        <div class="col-sm-10">
            <input type="password" placeholder=" 請輸入密碼（開頭為字母,且包含數字共至少5位）" required="required" id="inputPasswd" name="Passwd" class="form-control" />
        </div>
        <br />
    </div>
    <div>
        <a href="~/Home/index" class="btn btn-outline-info" style=" float:left"> 返回</a>
        <input class="btn btn-info" type="submit" value="新增"style=" float:right" />
    </div>

    
</form>